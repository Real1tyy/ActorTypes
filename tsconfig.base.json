{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"declaration": true,
		"composite": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@actor-types/*": ["packages/*/src"]
		},
		"outDir": "dist"
	},
	"exclude": ["node_modules", "dist"]
}
